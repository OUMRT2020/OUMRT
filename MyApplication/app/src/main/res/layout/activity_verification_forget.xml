<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification_forgetActivity">

    <!--    這是 verification_forget 介面    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1E189">

        <!--    verification_forget    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="200dp">
            <EditText
                android:id="@+id/verification_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:hint="verification code"
                android:textSize="30sp"
                android:gravity="center">
            </EditText>
        </LinearLayout>

        <!--    cancel_verify    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <!--    cancel    -->
            <TextView
                android:id="@+id/cancel_verification_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:background="#FFFFFF"
                android:text="cancel"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>

            <!--    verify    -->
            <TextView
                android:id="@+id/verify_verification_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:background="#FFFFFF"
                android:text="verify"
                android:textSize="30sp"
                android:textColor="#000000">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>