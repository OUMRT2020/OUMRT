<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97CBFF"
    android:orientation="vertical"
    tools:context=".login_model.select_identityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="選擇你的身分吧!"

        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <!--    driver_button    -->
        <Button
            android:id="@+id/driver_button"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_capsule"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:background="#ECECFF"
            android:text="車手"
            android:textSize="50sp" />

        <!--    passenger_button    -->
        <Button
            android:id="@+id/passenger_button"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_capsule"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/driver_button"
            android:layout_marginTop="10dp"
            android:background="#ECECFF"
            android:text="乘客"
            android:textSize="50sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone" />
</RelativeLayout>